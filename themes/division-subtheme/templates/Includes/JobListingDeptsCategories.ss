<% if $Category.exists || $Department.exists %> <div class="blog-post-meta"> <% if $Category.exists %> <p class="tags">Category: <% with $Category %> <a href="$Link">$Title</a><% if not Last %><% else %><% end_if %> <% end_with %> </p> <% end_if %> <% if $Department.exists %> <p class="tags">Department: <% loop $Departments %> <a href="$Link">$Title</a><% if not Last %><% else %><% end_if %> <% end_loop %> </p> <% end_if %> </div> <% end_if %>